{
  "name": "codepulse",
  "version": "0.1.0",
  "description": "Quantitative code quality measurement from the command line",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "codepulse": "./dist/cli/main.js"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "code-quality",
    "static-analysis",
    "complexity",
    "duplication",
    "dead-code",
    "measurement"
  ],
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/node": "^25.2.2",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^4.3.6"
  }
}
